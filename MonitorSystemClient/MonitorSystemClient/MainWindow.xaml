<Window xmlns:my="clr-namespace:MonitorSystemClient"
        x:Class="MonitorSystemClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namesp"
        Title="视频监控系统" Height="677" Width="1049" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Right" Width="123.5">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
                    <Button x:Name="btnSelectId" Content="选择" Click="btnSelectId_Click" RenderTransformOrigin="-2.607,1.001" Height="63.46" Margin="0,0,46.5,0" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Border>
            <Border DockPanel.Dock="Left" Width="212.5" HorizontalAlignment="Left">
                <my:TreeView x:Name="ztvTest" MouseDoubleClick="ztvTest_MouseDoubleClick" Margin="0.815,-0.835,-1.676,-1.03" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom" Height="647.865" >
                	<my:TreeView.RenderTransform>
                		<TransformGroup>
                			<ScaleTransform/>
                			<SkewTransform/>
                			<RotateTransform Angle="-359.573"/>
                			<TranslateTransform/>
                		</TransformGroup>
                	</my:TreeView.RenderTransform>
                </my:TreeView>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Height="646" VerticalAlignment="Top" Width="698.876" HorizontalAlignment="Right">
            	<MediaElement Name="mediaOne" Margin="9" ToolTip="双击可全屏观看" />
            </Border>
        </DockPanel>
    </Grid>
</Window>
